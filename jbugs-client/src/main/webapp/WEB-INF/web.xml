<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <security-role>
        <role-name>USER_MANAGEMENT</role-name>
    </security-role>
    <security-role>
        <role-name>PERMISSION_MANAGEMENT</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>protected_resources</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>USER_MANAGEMENT</role-name>
        </auth-constraint>
    </security-constraint>
